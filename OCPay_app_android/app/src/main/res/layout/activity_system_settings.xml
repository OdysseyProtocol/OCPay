<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_wallet_item_selected"
        android:orientation="vertical">

        <include
            android:id="@+id/include_action_bar"
            layout="@layout/layout_action_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include
            android:id="@+id/include_language"
            layout="@layout/item_settings_text" />

        <include
            android:id="@+id/include_unit"
            layout="@layout/item_settings_text" />


        <LinearLayout
            android:id="@+id/ll_settings_item"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">


            <TextView
                android:id="@+id/tv_settings_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="Touch ID"
                android:textColor="#FF38525F"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/sh_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>


    </LinearLayout>
</layout>